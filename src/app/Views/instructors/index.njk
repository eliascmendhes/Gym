{% extends "layout.njk" %}

{% block content%}
    <div class="card table-container">
        <a href="/instructors/create">Novo</a>
        <table width="100%">
            <thead>
                {# cabeçalho #}
                <tr>
                    {# cada tr é uma linha  #}
                    <th>
                        Instrutor
                        {# cada coluna é um th #}
                    </th>
                    <th>
                        Atentimento
                    </th>

                    <th>
                        Ação
                    </th>
                </tr>
            </thead>
            <tbody>
                {% for instructor in instructors%}
                    {# tboody é o corpo #}
                    <tr>
                        <td>
                            <span style="background-image: url({{instructor.avatar_url}})"></span>
                            {# aqui as colunas se chamam td #}
                            {{instructor.name}}
                        </td>
                        <td>{{instructor.services}}</td>
                        <td>
                            <a href="/instructors/{{instructor.id}}">Clica</a>
                        </td>
                    </tr>
                    {% endfor%}
                </tbody>
            </table>

        </div>

    {% endblock content%}