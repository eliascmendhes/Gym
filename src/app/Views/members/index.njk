{% extends "layout.njk" %}

{% block content%}
    <div class="card table-container">
        <a href="/members/create">Novo</a>
        <table width="100%">
            <thead>
                {# cabeçalho #}
                <tr>
                    {# cada tr é uma linha  #}
                    <th>
                        Membro
                        {# cada coluna é um th #}
                    </th>
                    <th>
                        Email
                    </th>

                    <th>
                        Altura
                    </th>

                    <th>
                        Peso
                    </th>

                    <th>
                        Ação
                    </th>
                </tr>
            </thead>
            <tbody>
                {% for member in members%}
                    {# tboody é o corpo #}
                    <tr>
                        <td>
                            <span style="background-image: url({{member.avatar_url}})"></span>
                            {# aqui as colunas se chamam td #}
                            {{member.name}}
                        </td>
                        <td>{{member.email}}</td>
                        <td>{{member.height}} cm</td>
                        <td>{{member.weight}} kg</td>
                        <td>
                            <a href="/members/{{member.id}}">Clica</a>
                        </td>
                    </tr>
                    {% endfor%}
                </tbody>
            </table>

        </div>

    {% endblock content%}